{
  "name": "odoo-mcp",
  "version": "1.1.0",
  "description": "MCP server for Odoo ERP integration",
  "license": "MIT",
  "type": "module",
  "packageManager": "yarn@4.9.2",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": "./dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jldb-xyz/odoo-assistant-mcp.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "!dist/__tests__",
    "!dist/test-utils",
    "!dist/src",
    "!dist/**/*.test.js",
    "!dist/**/*.test.d.ts",
    "!dist/**/*.map"
  ],
  "scripts": {
    "build": "tsc && mkdir -p dist/docs && cp src/docs/*.md dist/docs/",
    "dev": "swc src -d dist --watch --source-maps",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:llm": "yarn test:unit:llm",
    "test:unit:llm": "vitest run --reporter=vitest-llm-reporter",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:integration:llm": "vitest run --config vitest.integration.config.ts --reporter=vitest-llm-reporter",
    "test:integration:14": "ODOO_VERSION=14 vitest run --config vitest.integration.config.ts",
    "test:integration:15": "ODOO_VERSION=15 vitest run --config vitest.integration.config.ts",
    "test:integration:16": "ODOO_VERSION=16 vitest run --config vitest.integration.config.ts",
    "test:integration:17": "ODOO_VERSION=17 vitest run --config vitest.integration.config.ts",
    "test:integration:18": "ODOO_VERSION=18 vitest run --config vitest.integration.config.ts",
    "test:integration:19": "ODOO_VERSION=19 vitest run --config vitest.integration.config.ts",
    "test:integration:14:llm": "ODOO_VERSION=14 vitest run --config vitest.integration.config.ts --reporter=vitest-llm-reporter",
    "test:integration:15:llm": "ODOO_VERSION=15 vitest run --config vitest.integration.config.ts --reporter=vitest-llm-reporter",
    "test:integration:16:llm": "ODOO_VERSION=16 vitest run --config vitest.integration.config.ts --reporter=vitest-llm-reporter",
    "test:integration:17:llm": "ODOO_VERSION=17 vitest run --config vitest.integration.config.ts --reporter=vitest-llm-reporter",
    "test:integration:18:llm": "ODOO_VERSION=18 vitest run --config vitest.integration.config.ts --reporter=vitest-llm-reporter",
    "test:integration:19:llm": "ODOO_VERSION=19 vitest run --config vitest.integration.config.ts --reporter=vitest-llm-reporter",
    "docker:up": "docker compose up -d",
    "docker:up:14": "docker compose --profile odoo14 up -d",
    "docker:up:15": "docker compose --profile odoo15 up -d",
    "docker:up:16": "docker compose --profile odoo16 up -d",
    "docker:up:17": "docker compose up -d",
    "docker:up:18": "docker compose --profile odoo18 up -d",
    "docker:up:19": "docker compose --profile odoo19 up -d",
    "docker:down": "docker compose down -v",
    "docker:logs": "docker compose logs -f",
    "docker:wait": "./scripts/wait-for-odoo.sh",
    "docker:wait:14": "./scripts/wait-for-odoo.sh localhost 8014",
    "docker:wait:15": "./scripts/wait-for-odoo.sh localhost 8015",
    "docker:wait:16": "./scripts/wait-for-odoo.sh localhost 8016",
    "docker:wait:17": "./scripts/wait-for-odoo.sh localhost 8017",
    "docker:wait:18": "./scripts/wait-for-odoo.sh localhost 8018",
    "docker:wait:19": "./scripts/wait-for-odoo.sh localhost 8019",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "format": "biome format --write src/",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "yarn build && changeset publish"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "xlsx": "^0.18.5",
    "xmlrpc": "^1.3.2",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.0",
    "@types/express": "^5.0.6",
    "@types/node": "^22.0.0",
    "@types/xmlrpc": "^1.3.10",
    "@vitest/coverage-v8": "^4.0.16",
    "chokidar": "^5.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16",
    "vitest-llm-reporter": "^1.2.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
