{
  "name": "odoo-mcp",
  "version": "1.0.0",
  "description": "MCP server for Odoo ERP integration",
  "license": "MIT",
  "type": "module",
  "packageManager": "yarn@4.9.2",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": "./dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jldb-xyz/odoo-assistant-mcp.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc && mkdir -p dist/docs && cp src/docs/*.md dist/docs/",
    "dev": "swc src -d dist --watch --source-maps",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:llm": "yarn test:unit:llm",
    "test:unit:llm": "vitest run --reporter=vitest-llm-reporter",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "format": "biome format --write src/",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "yarn build && changeset publish"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "xmlrpc": "^1.3.2",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.0",
    "@types/node": "^22.0.0",
    "@types/xmlrpc": "^1.3.10",
    "@vitest/coverage-v8": "^4.0.16",
    "chokidar": "^5.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16",
    "vitest-llm-reporter": "^1.2.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
